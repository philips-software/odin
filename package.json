{
  "name": "@odinjs/odin",
  "version": "1.5.0",
  "description": "On-demand Dependency InjectioN",
  "author": "Thiago Teixeira <thiago.teixeira@philips.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/philips-software/odin.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm-run-all --sequential lint build:compile",
    "build:compile": "tsc --build",
    "ci:build": "npm run build:compile",
    "ci:setup": "npm ci",
    "ci:test": "npm run test -- --ci",
    "clean": "rimraf lib **/.eslintcache **/*.log **/*.tsbuildinfo **/test/coverage",
    "env:fresh": "npm-run-all --sequential env:reset env:setup",
    "env:reset": "npm run clean && npx rimraf node_modules",
    "env:setup": "npm run ci:setup",
    "lint": "eslint . --ext .js,.ts --cache --max-warnings 0",
    "test": "jest --config jest.config.js",
    "test:clear-cache": "jest --clearCache",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "devDependencies": {
    "@types/jest": "28.1.3",
    "@typescript-eslint/eslint-plugin": "5.30.0",
    "@typescript-eslint/parser": "5.30.0",
    "eslint": "8.18.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.5.3",
    "jest": "28.1.1",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "ts-jest": "28.0.5",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": ">= 16.11",
    "npm": ">= 8"
  }
}
